          "settings": {
            "address": "1600 Amphitheatre Parkway, Mountain View, CA 94043, United States"
          }
        },
        {
          "type": "schedule",
          "settings": {
            "schedule": "Lunes a Viernes de 9:00 a 18:00"
          }
        }
      ]
    }
  ]
}
{% endschema %}