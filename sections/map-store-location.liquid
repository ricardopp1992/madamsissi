<style>
  #shopify-section-{{ section.id }} {
    background-color: #000;
    padding: 4rem 0;
  }
  #shopify-section-{{ section.id }} * {
    box-sizing: border-box;
  }

  .map-store__container h3 {
    text-align: center;
    font-size: 2.5rem;
    margin: 0.5rem 0;
    color: rgb(var(--color-button));
  }
  .map-store__container p {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: rgb(var(--color-background));
  }
  .map-store__map-and-info {
    display: grid;
    grid-auto-flow: row;
    grid-auto-columns: 100%;
    justify-content: space-between;
    gap: 2rem;
  }
  .map-store__map-and-info > div {
    border: 2px solid rgb(var(--color-button));
    border-radius: var(--buttons-radius);
  }
  .map-store__info {
    display: flex;
    flex-direction: column;
    position: relative;
  }
  .map-store__info h4 {
    color: rgb(var(--color-button));
    margin: 1rem 0;
  }
  .map-store__info .map-store__image {
    width: 100%;
    height: 50rem;
    object-fit: cover;
    border-top-left-radius: calc(var(--buttons-radius) - 2px);
    border-top-right-radius: calc(var(--buttons-radius) - 2px);
    border-bottom-left-radius: 0;
  }

  .map-store__info .map-store__info-items {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    order: 2;
  }
  .map-store__info-items p {
    text-align: left;
    margin: 1rem 0;
  }
  .map-store__info .map-store__logo {
    background-color: #1F1F1F;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    order: 1;
  }
  .map-store__info .map-store__logo img {
    width: 20%;
    height: 70%;
  }
  .map-store__map-and-info .map-store__map {
    width: 100%;
    height: 40rem;
  }
  .map-store__map-and-info .map-store__map iframe {
    width: 100%;
    height: 100%;
    border-radius: var(--buttons-radius);
  }

  @media screen and (max-width: 767px) {
    .map-store__container {
      padding: 0 .5rem;
    }
  }
  @media screen and (min-width: 769px) {
    .map-store__container p {
      font-size: 1.25rem;
    }
    .map-store__map-and-info {
      grid-auto-flow: column;
      grid-auto-columns: calc(50% - .5rem) calc(50% - .5rem);
      gap: 1rem;
      max-width: 100%;
      overflow: hidden;
    }
    .map-store__info {
      display: flex;
      flex-direction: row;
      gap: 2rem;
    }

    .map-store__info .map-store__image {
      border-top-left-radius: calc(var(--buttons-radius) - 2px);
      border-bottom-left-radius: calc(var(--buttons-radius) - 2px);
      border-top-right-radius: 0;
      width: 50%;
      height: unset;
    }
    .map-store__info .map-store__logo {
      position: absolute;
      width: 50%;
      height: 5rem;
      bottom: 0;
      right: 0;
      border-bottom-right-radius: calc(var(--buttons-radius) - 1px);
    }
  }
</style>

<div class="map-store__container page-width-tablet page-width-desktop">
  <h3>{{ section.settings.title }}</h3>
  <p>{{ section.settings.sub_title }}</p>
  <div class="map-store__map-and-info">
    <div class="map-store__map">
      {{ section.settings.map_iframe }}
    </div>
    <div class="map-store__info">
      <img class="map-store__image" src="{{ section.settings.store_image | img_url: '500x500' }}" alt="Store Image">
      <div class="map-store__info-items">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'address' %}
              <div class="map-store__info-item">
                <h4>Dirección</h4>
                <p>{{ block.settings.address }}</p>
              </div>
            {% when 'schedule' %}
              <div class="map-store__info-item">
                <h4>Horario</h4>
                <p>{{ block.settings.schedule }}</p>
              </div>
            {% when 'phone' %}
              <div class="map-store__info-item">
                <h4>Teléfono</h4>
                <p>{{ block.settings.phone }}</p>
              </div>
            {% when 'email' %}
              <div class="map-store__info-item">
                <h4>Email</h4>
                <p>{{ block.settings.email }}</p>
              </div>
            {% when 'social' %}
              <div class="map-store__info-item">
                <h4>Redes Sociales</h4>
                <ul>
                  {% if block.settings.facebook != blank %}
                    <li><a href="{{ block.settings.facebook }}" target="_blank">Facebook</a></li>
                  {% endif %}
                  {% if block.settings.twitter != blank %}
                    <li><a href="{{ block.settings.twitter }}" target="_blank">Twitter</a></li>
                  {% endif %}
                  {% if block.settings.instagram != blank %}
                    <li><a href="{{ block.settings.instagram }}" target="_blank">Instagram</a></li>
                  {% endif %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="map-store__logo">
        <img src="{{ section.settings.logo | img_url: '500x500' }}" alt="Logo">
      </div>
    </div>
  </div>
</div>

